<!DOCTYPE html>
<html lang="nl-be">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Locs 4 Youth</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#008eb2" />
    @Styles.Render("~/Content/css/bundle")
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <h1 class="structural">Locs 4 Youth</h1>
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Locs 4 Youth", "Index", "Home", null, new { @class = "navbar-brand", @id = "title" })
                </div>
                <div id="menu" class="navbar-collapse collapse">
                    @Html.Partial("Partials/MenuPartial")
                    @Html.Partial("Partials/ToolsPartial")
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @Html.Partial("Partials/MessagePartial")
        @RenderBody()
        <hr />
        <footer class="container">
            <h2 class="structural">Footer</h2>
            <div class="pull-left">
                <img id="logo" alt="Jeugdlocatie-Booking Logo" src="~/Content/img/logo.png" />
            </div>
            <div class="pull-right">
                <p>
                    &copy; @DateTime.Now.Year - Locs 4 Youth |
                    <a href="/Help" target="_blank">API</a> |
                    <a href="http://matthiashoebeke.ikdoeict.net" target="_blank">Matthias</a> |
                    <a href="http://jlb.decocklaurens.ikdoeict.net" target="_blank">Laurens</a>
                </p>
            </div>
        </footer>
    </div>
    @Scripts.Render(new string[] { "~/bundles/jquery", "~/bundles/bootstrap" })
    @RenderSection("Scripts", false)
</body>
</html>